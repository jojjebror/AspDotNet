@model IEnumerable<Taharifran.Models.AspNetUsers>
@using Taharifran.Models
@using Microsoft.AspNet.Identity;
@using Microsoft.AspNet.Identity.EntityFramework;
@{
    ViewBag.Title = "Home";
}





<br />
<br />
<br />



@using (Html.BeginForm("Search", "Home", FormMethod.Get))
{
    @Html.TextBox("searching")<input type="submit" value="Search" />
}
<table class="table table-striped">
    <thead>
        <tr>
            <th>People using our service</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="3" style="color:red">
                    Sökningen gav inget resultat.
                </td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>


                    <td><dt>@item.Firstname</dt></td>
                    <td><dt>@item.Lastname</dt></td>
                    <td><dt>@Html.ActionLink("Go to profilepage", "otherProfile", new { id = item.Id })</dt></td>
                </tr>
            }
        }
    </tbody>

</table>