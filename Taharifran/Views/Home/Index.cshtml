@{
    ViewBag.Title = "Home Page";
}
@model IEnumerable<Taharifran.Models.AspNetUsers>
@using Taharifran.Models
@using Microsoft.AspNet.Identity;
@using Microsoft.AspNet.Identity.EntityFramework;


        @{var manager = new UserManager<ApplicationUser>
         (new UserStore<ApplicationUser>
                (new ApplicationDbContext()));
            var currentUser = manager.FindById(User.Identity.GetUserId());
        }


        <div class="jumbotron">
            
            <img src="@Url.Action("UserPhotos", "Home" )" style="width:160px;height:160px; background: #FFFFFF;
            margin: auto;
            -moz-border-radius: 60px;
            border-radius: 100px;
            padding: 6px;
            box-shadow: 0px 0px 20px #888;" />
            <h3><dt>Välkommen</dt></h3>

        </div>
        

        <br /> <br />

        @using (Html.BeginForm("Index", "Home", FormMethod.Get))

        {
            @Html.TextBox("searching")<input type="submit" value="Search" />
        }
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Spana in snyggingarna nedanför vetja!</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() == 0)
                {
                    <tr>
                        <td colspan="3" style="color:red">
                            Sökningen gav inget resultat.
                        </td>
                    </tr>
                }
                else //hej
                {
                    foreach (var item in Model)
                    {
                        <tr>

                            <td><dt>@item.UserName</dt></td>
                            <td><dt>@item.Firstname</dt></td>
                            <td><dt>@item.Lastname</dt></td>
                            <td><dt>@Html.ActionLink("Gå till profil", "otherProfile", new {id=item.Id })</dt></td>
                        </tr>
                    }
                }
            </tbody>

        </table>
